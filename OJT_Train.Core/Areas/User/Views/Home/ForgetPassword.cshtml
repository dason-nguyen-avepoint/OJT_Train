@model OJT_Train.Core.Areas.User.Models.ForgotPassword
<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-7 col-lg-10">
				<div class="login-wrap p-4 p-md-5">
					<div class="d-flex">
						<div class="w-100">
							<h3 class="mb-4">Sign In</h3>
						</div>
					</div>
					<span class="text-danger">@ViewBag.Message</span>
					<form action="#" class="login-form" method="post">
						<div class="form-group">
							<label asp-for="Email"></label>
							<input asp-for="Email" type="text" class="form-control rounded-left" placeholder="Your email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

						<div class="form-group d-flex align-items-center">
							<div class="w-100 d-flex justify-content-end">
								<button type="submit" class="btn btn-primary rounded submit">Submit</button>
							</div>
						</div>
						<div class="form-group mt-4">
							<div class="w-100 text-center">
								<p class="mb-1"><a a asp-controller="Home" asp-action="Login">Back to Login</a></p>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}