<div id="grid"></div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var crudServiceBaseUrl = "https://localhost:7258/admin",
                dataSource = new kendo.data.DataSource({
                    transport: {
                        read: {
                            url: crudServiceBaseUrl + "/Category/GetCategory",
                            dataType: "json"
                        },
                        create: {
                            url: crudServiceBaseUrl + "/Category/CreateCategory",
                            dataType: "json",
                            contentType: "application/json",
                            type: "POST"
                        },
                        parameterMap: function (options, operation) {
                            if (operation === "create" && options.models) {
                                return kendo.stringify(options.models[0]);
                            }
                            if (operation !== "read" && options.models) {
                                return { models: kendo.stringify(options.models) };
                            }
                        }
                    },
                    batch: true,
                    pageSize: 5,
                    schema: {
                        model: {
                            id: "categoryId",
                            fields: {
                                categoryId: { type: "number", editable: false, nullable: false },
                                categoryName: {
                                    type: "string", 
                                    validation: {
                                        required: {
                                            message:"Please enter Category Name"
                                        }
                                    }
                                },
                                createdDate: { type: "date", editable: false },
                                modifiedDate: { type: "date", nullable: true },
                                isPublished: { type: "boolean" }
                            }
                        }
                    }
                });

            $("#grid").kendoGrid({
                contextMenu: true,
                persistSelection: true,
                dataSource: dataSource,
                selectable: "multiple, rows",
                sortable: true,
                reorderable: {
                    rows: true
                },
                pageable: true,
                height: 550,
                toolbar: ["create"],
                columns: [
                    { field: "categoryName", title: "Category Name" },
                    { field: "createdDate", title: "Created Date", width: "120px", format: "{0:g}" },
                    { field: "modifiedDate", title: "Modified Date", width: "120px", format: "{0:g}" },
                    { field: "isPublished", title: "Published", width: "120px" },
                    { command: ["edit", "destroy"], title: "&nbsp;", width: "250px", exportable: false }],
                editable: "popup"
                // save: function (e) {
                //     // Handle the save event
                //     if (e.model.isNew() && e.model.dirty) {
                //         // Close the create popup when a new item is saved
                //         this.closeCell();
                //         // Reload the index page after a successful add
                //         window.location.reload();
                //     }
                // }
            });
        });
    </script>
}