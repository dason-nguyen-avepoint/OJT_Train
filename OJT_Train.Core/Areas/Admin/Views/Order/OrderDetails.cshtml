@model IEnumerable<OrderDetail>

<div class="d-flex" style="width:100%; height:300px; justify-content:space-around">
    <div class="col-md-4 col-sm-12" style="border:20px solid rgb(248,249,252);border-radius:100px; background-color:rgb(220,183,227); color:rgb(29,33,31)">
        <div style="margin-top:30px; margin-left:100px">
            <span style="font-size:x-large">Order ID:</span>
            <h1><strong>#@ViewBag.Order.OrderId</strong></h1>
            <div class="d-flex flex-column" style="width:100%">
                <div class="d-flex flex-row" style="align-items:center;">
                    <i class="fa fa-credit-card" aria-hidden="true" style="font-size:30px;margin-right:10px"></i>
                    <span style="font-size:30px">Payment Status</span>
                </div>
                <div class="d-flex flex-row" style=" align-items:center">
                    <i class="fa fa-shopping-cart" aria-hidden="true" style="font-size:30px;margin-right:10px"></i>
                    <span style="color:rgb(61,252,139);font-size:30px">@ViewBag.Order.OrderStatus</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12" style="border:20px solid rgb(248,249,252);border-radius:100px; background-color:rgb(100,183,254);color:rgb(29,33,31)">
        <div style="margin-top:30px; margin-left:50px">
            <span style="font-size:x-large">Customer</span>
            <div class="d-flex d-flex-row align-items-center">
                <i class="fa fa-user" aria-hidden="true" style="font-size:30px; margin-right:10px"></i>
                <div class="d-flex flex-column">
                    <strong style="font-size:20px">Name</strong>
                    <span>@ViewBag.Order.CreatedBy</span>
                </div>
            </div>
            <div class="d-flex d-flex-row align-items-center">
                <i class="fa fa-map-marker" aria-hidden="true" style="font-size:30px; margin-right:10px"></i>
                <div class="d-flex flex-column">
                    <strong style="font-size:20px">Address</strong>
                    <span>@ViewBag.Order.Address</span>
                </div>
            </div>
            <div class="d-flex d-flex-row align-items-center">
                <i class="fa fa-phone" aria-hidden="true" style="font-size:30px; margin-right:10px"></i>
                <div class="d-flex flex-column">
                    <strong style="font-size:20px">Phone</strong>
                    <span>(+84)909-000-999</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12" style="border:20px solid rgb(248,249,252);border-radius:100px; background-color:rgb(242,225,166);color:rgb(29,33,31)">
        <div style="margin-top:30px; margin-left:40px">
            <span style="font-size:x-large">Billing information</span>
            <div class="d-flex d-flex-row align-items-center">
                <i class="fa fa-user" aria-hidden="true" style="font-size:30px; margin-right:10px"></i>
                <div class="d-flex flex-column">
                    <strong style="font-size:20px">Billing address</strong>
                    <span>@ViewBag.Order.Address</span>
                </div>
            </div>
            <div class="d-flex d-flex-row align-items-center">
                <i class="fa fa-phone" aria-hidden="true" style="font-size:30px; margin-right:10px"></i>
                <div class="d-flex flex-column">
                    <strong style="font-size:20px">Phone</strong>
                    <span>(+84)909-000-999</span>
                </div>
            </div>
            <div class="d-flex d-flex-row align-items-center">
                <i class="fa fa-credit-card" aria-hidden="true" style="font-size:30px; margin-right:10px"></i>
                <div class="d-flex flex-column">
                    <strong style="font-size:20px">Payment</strong>
                    <span>Visa card</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="order-detail" style="background-color:rgb(241,246,250)">
    <h3>Product</h3>
    @foreach(var item in Model)
    {
        <div class="detail d-flex flex-row" style="background-color:white; margin:20px; padding:10px">
            <div class="col-2">
                <img src="@item.ImageProduct" style="width:30%" />
            </div>
            <div class="col-6 d-flex flex-column">
                <strong>@item.ProductName</strong>
                <span>Made by Apple</span>
                <span>@item.Price.ToString("###,###,###") VND</span>
            </div>
            <div class="col-2 d-flex flex-column">
                <strong>Quantity</strong>
                <span>@item.Quantity</span>
            </div>
            <div class="col-2 d-flex flex-column">
                <strong>Total</strong>
                <span>@(item.Quantity * item.Price) VND</span>
            </div>
        </div>
    }
    

    <div class="d-flex flex-row-reverse" style="margin-right:20px;margin-bottom:10px">
        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Order" asp-action="Index">Thoát</a>
        <a class="btn btn-danger" style="margin-right:10px">Huỷ đơn hàng</a>
        <a class="btn btn-success" style="margin-right:10px">Xác nhận giao hàng</a>
    </div>
</div>